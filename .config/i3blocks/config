separator_block_width=15
markup=pango

[volume]
command=~/.local/bin/statusbar/$BLOCK_NAME
interval=once
signal=1

[cpu_temp]
#command=echo CPUğŸŒ¡ï¸ $(sensors | awk '/^Package/ {print $4}')
command=echo CPUğŸŒ¡ï¸ $(sensors | awk '/^Tctl:/ {print $2}')
interval=15

[ram_use]
command=free -h | awk '/^Mem:/ {print $1 $3 "/" $2}'
interval=15

[disk_usage]
command=echo Disk:$(df -H / | awk '/^\/dev\/nvme0n1p4/ {print $3 "/" $2}')
interval=30

[gputemp]
command=echo GPUğŸŒ¡ï¸ $(nvidia-smi | grep -o [0-9][0-9]C)
interval=5

[clock]
command=date '+%a %b %d, %I:%M%p'
interval=5
